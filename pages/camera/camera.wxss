/* pages/camera/camera.wxss */
.cam_wrapper{
  color: #fff;
  width:  100%;
  height: 100%;
  background: linear-gradient(135deg, #fad1cb, #ee7691);
  position: relative;
  overflow: hidden;
}
.cam_wrapper .slogan{
  font-size: 48rpx;
  text-align: center;
  margin-top: 100rpx;
}
.cam_wrapper .choose_btn_box{
  width: 100%;
  position: absolute;
  bottom: 20%;
  text-align: center;
}
.cam_wrapper .select_btn{
  width: 200rpx;
  height: 200rpx;
  border: 1rpx solid #fff;
  border-radius: 50%;
  text-align: center;
  //margin-left: -100rpx;
  margin: 0 auto;

}
.cam_wrapper .icon_camera{
  width: 138rpx;
  height: 138rpx;
  margin-top: 31rpx;
}
.cam_wrapper .choose_btn_box text{
  font-size: 24rpx;
  margin-top: 20rpx;
}